<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--
    tools:context=".FragmentSlider"
    TODO: Update blank fragment layout
    -->

    <androidx.viewpager2.widget.ViewPager2

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sliderViewPager2"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_outline_download_24"
        android:background="@color/button_primary"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="128dp"
        />
    <!-- android:context_description -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/vpn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_margin="16dp"
        android:src="@drawable/ic_outline_vpn_lock_24"
        android:background="@color/button_primary"
        />

</FrameLayout>